<div class="row justify-content-center contenedor">

    <div class="card" style="width: 24rem;">

        <div class="card-body">
            <h5 class="card-title">Ticket</h5>
            <p class="card-text">Usuario: {{ticket.purcharser}}
                Su compra fue registrada con el codigo:<strong>{{ticket.code}}</strong> </p>
        </div>

        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Cantidad</th>
                </tr>
            </thead>
            <tbody>
                {{#each ticket.products}}
                <tr>
                    <td>{{this.product.title}}</td>
                    <td>{{this.product.price}}</td>
                    <td>{{this.quantity}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <h4>Monto total: {{ticket.amount}}</h4>
        <h4>Fecha: {{dateTime}}</h4>
        <div class="card-body">
            <a href="http://localhost:8080/products/views" class="card-link">Volver al inicio</a>
            <button id="crearpdf">Generar PDF</button>
        </div>
    </div>
</div>

<script>
   document.addEventListener("DOMContentLoaded", () => {
    //captura de pantalla sin el botÃ³n Generar pdf 
    let boton = document.getElementById("crearpdf");
    let container = document.getElementById("contenedor");
 
    boton.addEventListener("click", event => {
        event.preventDefault();
        boton.style.display = "none"; 
        window.print();
    }, false);
 
    container.addEventListener("click", event => {
        boton.style.display = "initial"; 
    }, false);
 
}, false);
</script>