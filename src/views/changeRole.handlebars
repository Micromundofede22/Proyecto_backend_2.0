<div>
    <h2>Cambiar de Rol</h2>
    <h3>Carga de documentaci√≥n PREMIUM</h3>

    <button><a href="/api/users/{{user._id}}/documents">Cargar doc</a></button>



    <form class="w-25 " action="/api/users/premium/{{user._id}}" method="post">
        <fieldset>
            <legend>Selecciona tu nuevo rol</legend>
            <div>
                <input type="radio" id="user" name="role" value="user" checked />
                <label for="user">Usuario</label>
            </div>

            <div>
                <input type="radio" id="premium" name="role" value="premium" />
                <label for="premium">Usuario Premium</label>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-success">Cambiar Rol</button>
    </form>
</div>


<div>
    {{#if (igual user.servicio "local" )}}
    <form class="col-5" action="/api/session/current/cargaimage" method="post" enctype="multipart/form-data">
